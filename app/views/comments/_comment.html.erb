<div class="comments_wrapper clearfix">
  <div class="pull-left">
    <% @comments.each do |comment| %>
  Rating: <div class="star-rating" data-score= <%= comment.rating %> ></div>
    <p class="lead"><%= comment.body %></p>
    <p>
      <small>Submitted
        <strong><%= time_ago_in_words(comment.created_at) %> ago </strong>
          by <%= comment.user.email %>
      </small>
    </p>
    <% end %>
  </div>

  <div>
    <% if comment.user == current_user %>
      <%= link_to("Delete", product_comment_path(@product, comment), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm pull-right" ) %>
    <% end %>
  </div>
</div>
